<h1 class="text-xl neon-text-on-no-link fixed top-7 left-1/2 transform -translate-x-1/2 z-10">ログイン</h1>
<div class="flex items-center justify-center h-screen">
  <%= form_with url: login_path do |f| %>
    <div class="mb-12">
      <%= f.text_field :email, placeholder: 'メールアドレス', class: 'input-field',autocomplete: 'off' %>
    </div>
    <div class="mb-10">
      <%= f.password_field :password, placeholder: 'パスワード', class: 'input-field',autocomplete: 'off' %>
    </div>
    <div class="flex justify-end">
      <%= f.submit 'ログイン', id: "submit-button", class: "neon-text-off"%>
    </div>
  <% end %>
</div>