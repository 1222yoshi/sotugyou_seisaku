<h1 class="text-xl neon-text-on-no-link fixed top-7 left-1/2 transform -translate-x-1/2 z-10 max-lg:text-sm max-lg:top-12">ログイン</h1>
<div class="flex items-center justify-center h-screen lg:fixed left-1/2 right-1/2">
  <%= form_with url: login_path do |f| %>
    <div class="mb-12">
      <%= f.text_field :email, placeholder: 'メールアドレス', class: 'input-field', style: "width: 200px;", autocomplete: 'off' %>
    </div>
    <div class="mb-6">
      <%= f.password_field :password, placeholder: 'パスワード', class: 'input-field', style: "width: 200px;", autocomplete: 'off' %>
    </div>
    <div class="flex justify-end mb-8">
       <%= f.submit 'ログイン', id: "submit-button", class: "neon-text-off"%>
    </div>
    <div class="flex justify-start">
      <%= link_to "新規登録はこちら", new_user_path, class: "neon-off-on"%>
    </div>
  <% end %>
  </div>
</div>